{
  "name": "@midudev/tailwind-animations",
  "version": "0.0.7",
  "description": "Tailwind CSS plugin to add animations to your website",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./src/index.js"
    },
    "./theme": {
      "require": "./dist/theme.js",
      "import": "./src/theme.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "standard ./src",
    "lint:fix": "standard --fix ./src",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "keywords": [],
  "author": "Miguel Ángel Durán (@midudev) & su maravillosa comunidad",
  "license": "MIT",
  "devDependencies": {
    "@csstools/postcss-minify": "1.1.0",
    "postcss": "8.4.35",
    "standard": "17.1.0",
    "tailwindcss": "3.4.1",
    "typescript": "^5.4.5",
    "vitest": "1.2.2"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "standard"
  }
}
